{
  "private": true,
  "scripts": {
    "build": "next build && next export",
    "start": "next",
    "pack": "rocket-punch build",
    "publish": "rocket-punch publish",
    "storybook": "start-storybook",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "lint": "tsc && eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest --colors",
    "coverage": "jest --coverage --colors"
  },
  "husky": {
    "hooks": {
      "pre-commit": "markdown-source-import \"{,!(node_modules)/**/}*.md\" --git-add && lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint",
      "jest --colors --findRelatedTests"
    ]
  },
  "dependencies": {
    "next": "latest",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@rocket-scripts/babel-preset": "^0.3.6",
    "@rocket-scripts/use-webpack-alias": "^0.3.6",
    "@rocket-scripts/webpack": "^0.3.6",
    "@ssen/eslint-config": "^1.1.0",
    "@ssen/prettier-config": "^1.0.0",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@storybook/source-loader": "^5.3.19",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.5",
    "@types/node": "^14.0.24",
    "@types/prettier": "^2.0.2",
    "@types/react": "^16.9.16",
    "@types/react-dom": "^16.9.4",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "markdown-source-import": "^1.3.1",
    "prettier": "^2.0.5",
    "rocket-punch": "^1.3.2",
    "typescript": "^3.9.7"
  }
}
